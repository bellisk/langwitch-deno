{
	"fmt": {
		"options": {
			"useTabs": true,
			"lineWidth": 80,
			"indentWidth": 4,
			"singleQuote": false,
			"proseWrap": "preserve"
		}
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-unused-vars",
				"prefer-const",
				"require-await",
				"no-explicit-any",
				"ban-types"
			]
		}
	}
}
